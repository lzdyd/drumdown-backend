{
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "jest": false,
    "mongo": true
  },
  "globals": {
    "NODE_ENV": true,
    "__DEVELOPMENT__": true,
    "__PRODUCTION__": true
  },
  "rules": {
    "semi": [2, "always"],
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "never"],
    "linebreak-style": 0,
    "object-curly-spacing": ["error", "always"],
    "space-before-blocks": ["error", "always"]
  }
}
